---
import "@fontsource-variable/inter";
import "@fontsource/charmonman/700.css";
import "@fontsource/gotu";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Meltem Soğuk Stropoli’nin 2023 Ağustos'da çıkan kitabı Yeşil Mavi Hayat (Destek Yayınları) hakkında tüm bilgiler"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body class="flex flex-col min-h-screen">
    <Header />
    <slot />
    <Footer />
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-89WX1XCMH9"></script>
    <script id="google-analytics">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-89WX1XCMH9");
    </script>
  </body>
</html>

<script is:inline>
if (window.netlifyIdentity) {
  window.netlifyIdentity.on("init", (user) => {
    if (!user) {
      window.netlifyIdentity.on("login", () => {
        document.location.href = "/admin/";
      });
    }
  });
}
</script>
