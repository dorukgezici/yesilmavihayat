---
import type { CollectionEntry } from "astro:content";

interface Props {
  article: CollectionEntry<"news">;
}

const { article } = Astro.props;
---

<a href={article.data.url} target="_blank" class="no-underline not-prose">
  <div class="card w-96 bg-base-200 shadow-xl">
    <figure>
      <img
        src={article.data.img}
        alt={article.data.title}
        class="object-cover h-[250px] w-[384px]"
        height={250}
        width={384}
      />
    </figure>
    <div class="card-body prose">
      <h2 class="card-title">{article.data.title}</h2>
      <p>{article.body}</p>
      <div class="card-actions justify-end mt-4">
        <div class="badge badge-outline">#{article.data.source}</div>
        <div class="badge badge-outline">{new Date(article.data.date).toLocaleDateString("tr")}</div>
      </div>
    </div>
  </div>
</a>
